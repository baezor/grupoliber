---
import "../styles/main.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <footer>
      <p>
        <small
          >GRUPO LIBER SOLUCIONES TECNOLOGICAS Y DE EDUCACION MEXICO |</small
        >
        <small> Todos los derechos reservados &copy; 2023</small>
      </p>
    </footer>
  </body>
</html>
